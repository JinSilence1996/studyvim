" 设置编码
set encoding=utf-8
" 设置文件类型
filetype on
filetype indent on 
filetype plugin on
" 设置外部剪贴板可以复制到vim中
set clipboard=unnamed
" 不保存swap档和备份bak
set noswapfile
set nobackup
set nowritebackup

"未保存时可以跳转到另一个文件
set hidden
set updatetime=100
set shortmess+=c
" set signcolumn=number 设置行号和左边的合并在一起
set signcolumn=yes
